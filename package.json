{
  "name": "awning-work-order-management",
  "version": "1.0.0",
  "description": "Awning cleaning and repair work order management system",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": ["awning", "work-order", "flask"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/test/js/**/*.test.js",
      "**/static/js/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "static/js/**/*.js",
      "!static/js/**/*.test.js",
      "!static/js/app.js",
      "!static/js/keyboard-shortcuts.js",
      "!static/js/dropdown-data.js",
      "!static/js/draft-autosave.js"
    ],
    "coverageDirectory": "coverage-js",
    "coverageReporters": ["text", "lcov", "json-summary"],
    "modulePathIgnorePatterns": ["<rootDir>/venv/"],
    "testPathIgnorePatterns": ["/node_modules/", "/venv/"],
    "setupFilesAfterEnv": ["<rootDir>/test/js/setup.js"]
  }
}